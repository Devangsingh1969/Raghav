<%- include('./base/header.ejs') %>
    <div class="container">
        <div class="alert bg-success my-3">
            <h4 class="text-center" style="color: aliceblue;">Add New student </h4>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <form action = '/add/student' method ="post">
                    <div>
                        <label for = "" class = "form-label"> rollNo</label>
                        <input type="text"name = "rollNo" value="<%=student.rollNo%>" class ="form-control">
                    </div>
                    <div>
                        <label for = "" class = "form-label"> firstName</label>
                        <input type="text"name = "firstName" value="<%=student.firstName%>" class ="form-control">
                    </div>
                    <div>
                        <label for = "" class = "form-label"> lastName</label>
                        <input type="text"name = "lastName" value="<%=student.lastName%>" class ="form-control">
                    </div>
                    <div>
                        <label for = "" class = "form-label"> fatherName</label>
                        <input type="text"name = "fatherName" value="<%=student.fatherName%>"class ="form-control">
                    </div>
                    <div>
                        <label for = "" class = "form-label"> aadharCardNo</label>
                        <input type="text"name = "aadharCardNo" value="<%=student.aadharCardNo%>"class ="form-control">
                    </div>
                    <div>
                        <label for = "" class = "form-label"> mobileNo</label>
                        <input type="text"name = "mobileNo" value="<%=student.mobileNo%>"class ="form-control">
                    </div>
                    <input type ="submit"value = "Add Student" class="btn btn-warning my-3 w-100">
                </form>
            </div>
            <div class="col"></div>

        </div>
    </div>
<%- include('./base/footer.ejs')%>